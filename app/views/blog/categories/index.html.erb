<%= render "blog/layouts/navigation" %>

<div class="container-fluid" id="page-container">
  <span class="breadcrumb"> Blog </span>
  <h1 class="row justify-content-center">All Categories</h1> 

    <div class="row justify-content-center">
      <div class="flickr_pagination">
        <%= will_paginate @categories %>
      </div>
    </div>

    <% @categories.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow bg-white rounded">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to "#{category.name}",
                            blog_category_path(category), class: "text-success" %>
                <p class="category_articles_count">
                  <%= pluralize(category.articles.count, "article") %>
                </p>
              </h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row justify-content-center mt-4">
      <div class="flickr_pagination">
        <%= will_paginate @categories %>
      </div>
    </div>

  </div>
</div>
