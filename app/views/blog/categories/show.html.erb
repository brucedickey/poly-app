<%= render "blog/layouts/navigation" %>

<div class="container-fluid" id="page-container">
  <h1 class="text-center mt-4"><%= "Category: " + @category.name %></h1>

  <div class="row justify-content-center">
    <% if logged_in? and current_user.admin? %>
      <span class="badge"><%= link_to "Edit Category Name", edit_blog_category_path(@category) %></span>
    <% end %> 

    <div class="flickr_pagination">
      <%= will_paginate @articles %>
    </div>
  </div>

  <%= render 'blog/articles/article', obj: @articles %>

  <div class="row justify-content-center">
    <div class="flickr_pagination mb-4">
      <%= will_paginate @articles %>
    </div>
  </div>
</div>
